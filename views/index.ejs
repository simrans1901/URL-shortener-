<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <title>URL Shortener Pro</title>
    <style>
        :root {
            --primary-color: #6c63ff;
            --hover-color: #564fd8;
        }
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding-bottom: 60px;
        }
        .header {
            background: linear-gradient(135deg, var(--primary-color), #4a42d6);
            color: white;
            padding: 1rem 0;
            position: sticky;
            top: 0;
            z-index: 1000;
        }
        .badge-total {
            background-color: white;
            color: var(--primary-color);
            font-size: 0.8rem;
            padding: 0.5rem 0.75rem;
        }
        .card {
            border: none;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            margin-bottom: 1.5rem;
            overflow: hidden;
        }
        
        /* URL Input Section */
        .url-input-container {
            display: flex;
            flex-direction: column;
            gap: 0.75rem;
            width: 100%;
        }
        .url-input-group {
            display: flex;
            width: 100%;
        }
        #fullUrl {
            flex-grow: 1;
            min-width: 0;
            padding: 0.75rem 1rem;
            border: 1px solid #ced4da;
            border-radius: 0.375rem 0 0 0.375rem;
            font-size: 1rem;
            transition: all 0.2s ease;
        }
        #fullUrl:focus {
            outline: none;
            border-color: var(--primary-color);
            box-shadow: 0 0 0 2px rgba(108, 99, 255, 0.25);
        }
        .btn-shorten {
            background-color: var(--primary-color);
            border: none;
            border-radius: 0 0.375rem 0.375rem 0;
            white-space: nowrap;
            padding: 0 1.5rem;
            font-weight: 500;
            transition: all 0.2s ease;
        }
        .btn-shorten:hover {
            background-color: var(--hover-color);
            transform: translateY(-1px);
        }
        
        /* URL List Items */
        .url-list-container {
            max-height: 60vh;
            overflow-y: auto;
            padding-right: 0.5rem;
        }
        .url-item {
            border-bottom: 1px solid #eee;
            padding: 1rem 0;
            transition: all 0.2s ease;
        }
        .url-item:hover {
            background-color: #fafafa;
        }
        .url-display {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
        }
        .original-url {
            font-weight: 500;
            color: #333;
            text-decoration: none;
            display: block;
            margin-bottom: 0.5rem;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }
        .short-url {
            color: var(--primary-color);
            font-size: 0.9rem;
            font-weight: 500;
        }
        .click-count {
            background-color: #f0f0f0;
            border-radius: 12px;
            padding: 0.25rem 0.75rem;
            font-size: 0.8rem;
            color: #666;
            display: inline-flex;
            align-items: center;
        }
        .click-count i {
            margin-right: 0.25rem;
            font-size: 0.7rem;
        }
        .actions {
            display: flex;
            gap: 0.75rem;
            margin-top: 0.75rem;
        }
        .btn-action {
            padding: 0.4rem 0.9rem;
            font-size: 0.85rem;
            border-radius: 6px;
            display: flex;
            align-items: center;
            gap: 0.3rem;
        }
        .btn-action i {
            font-size: 0.9rem;
        }
        
        /* Footer */
        footer {
            position: fixed;
            bottom: 0;
            width: 100%;
            background-color: white;
            padding: 1rem 0;
            text-align: center;
            font-size: 0.8rem;
            color: #666;
            border-top: 1px solid #eee;
            z-index: 1000;
        }

        /* Empty State */
        .empty-state {
            text-align: center;
            padding: 2rem 0;
        }
        .empty-state i {
            font-size: 3rem;
            color: #ddd;
            margin-bottom: 1rem;
        }
        .empty-state p {
            color: #999;
            font-size: 1rem;
        }

        /* Mobile Responsiveness */
        @media (max-width: 768px) {
            .container {
                padding: 0 1rem;
            }
            .header h1 {
                font-size: 1.25rem;
            }
            .badge-total {
                font-size: 0.7rem;
                padding: 0.4rem 0.6rem;
            }
            .url-input-group {
                flex-direction: column;
            }
            #fullUrl {
                border-radius: 0.375rem;
                width: 100%;
                margin-bottom: 0.5rem;
                padding: 0.75rem;
            }
            .btn-shorten {
                border-radius: 0.375rem;
                width: 100%;
                padding: 0.75rem;
                justify-content: center;
            }
            .actions {
                flex-direction: row;
                gap: 0.5rem;
            }
            .btn-action {
                flex: 1;
                justify-content: center;
            }
            .url-list-container {
                max-height: 50vh;
            }
        }

        /* Scrollbar Styling */
        ::-webkit-scrollbar {
            width: 6px;
        }
        ::-webkit-scrollbar-track {
            background: #f1f1f1;
            border-radius: 10px;
        }
        ::-webkit-scrollbar-thumb {
            background: #d1d1d1;
            border-radius: 10px;
        }
        ::-webkit-scrollbar-thumb:hover {
            background: #b1b1b1;
        }
    </style>
</head>
<body>
    <!-- Header Section -->
    <div class="header mb-3">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="m-0">
                    <i class="bi bi-link-45deg"></i> URL Shortener Pro
                </h1>
                <span class="badge badge-total">
                    <i class="bi bi-link-45deg"></i> Total Links: <%= shorturls.length %>
                </span>
            </div>
        </div>
    </div>

    <div class="container">
        <!-- Shorten URL Card -->
        <div class="card p-3 mb-3">
            <h3 class="h5 mb-3">
                <i class="bi bi-plus-circle"></i> Create New Short URL
            </h3>
            <form action="/shorturls" method="POST">
                <div class="url-input-container">
                    <div class="url-input-group">
                        <input 
                            type="url" 
                            name="fullUrl" 
                            id="fullUrl" 
                            class="form-control" 
                            placeholder="Enter long URL" 
                            required
                            aria-label="Long URL to shorten"
                        />
                        <button class="btn btn-primary btn-shorten" type="submit">
                            <i class="bi bi-scissors"></i> Shorten
                        </button>
                    </div>
                    <small class="text-muted">
                        Example: https://www.example.com/very-long-url-path
                    </small>
                </div>
            </form>
        </div>

        <!-- URL List -->
        <div class="card p-3">
            <h3 class="h5 mb-3">
                <i class="bi bi-list-ul"></i> Your Short URLs
            </h3>
            
            <div class="url-list-container">
                <% if (shorturls.length === 0) { %>
                    <div class="empty-state">
                        <i class="bi bi-link-45deg"></i>
                        <p>No short URLs created yet</p>
                    </div>
                <% } else { %>
                    <% shorturls.forEach(shorturl => { %>
                    <div class="url-item">
                        <div class="url-display">
                            <div style="flex: 1; min-width: 0;">
                                <a href="<%= shorturl.full %>" target="_blank" class="original-url" aria-label="Original URL">
                                    <%= shorturl.full.replace(/^https?:\/\//, '').split('/')[0] %>
                                </a>
                                <div class="d-flex align-items-center">
                                    <a href="<%= shorturl.short %>" target="_blank" class="short-url" aria-label="Short URL">
                                        <%= shorturl.short.replace(/^https?:\/\//, '').substring(0, 15) %><%= shorturl.short.replace(/^https?:\/\//, '').length > 15 ? '...' : '' %>
                                    </a>
                                    <span class="click-count ms-2">
                                        <i class="bi bi-graph-up"></i> <%= shorturl.clicks %>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="actions">
                            <form method="POST" action="/<%= shorturl._id %>" class="d-inline">
                                <input type="hidden" name="_method" value="DELETE" />
                                <button class="btn btn-outline-danger btn-action" type="submit" aria-label="Delete URL">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                            <button class="btn btn-outline-primary btn-action copy-btn" 
                                    data-shorturl="<%= shorturl.short %>" aria-label="Copy short URL">
                                <i class="bi bi-clipboard"></i> Copy
                            </button>
                        </div>
                    </div>
                    <% }) %>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer>
        <div class="container">
            <p class="m-0">© <%= new Date().getFullYear() %> URL Shortener Pro</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Enhanced Copy functionality
        document.querySelectorAll('.copy-btn').forEach(btn => {
            btn.addEventListener('click', async () => {
                try {
                    const shortUrl = btn.getAttribute('data-shorturl');
                    await navigator.clipboard.writeText(shortUrl);
                    
                    const originalContent = btn.innerHTML;
                    btn.innerHTML = '<i class="bi bi-check"></i> Copied!';
                    btn.classList.add('btn-success');
                    btn.classList.remove('btn-outline-primary');
                    
                    setTimeout(() => {
                        btn.innerHTML = originalContent;
                        btn.classList.remove('btn-success');
                        btn.classList.add('btn-outline-primary');
                    }, 2000);
                } catch (err) {
                    console.error('Failed to copy:', err);
                    alert('Failed to copy URL to clipboard');
                }
            });
        });

        // Auto-focus input field with delay for better mobile experience
        setTimeout(() => {
            const inputField = document.getElementById('fullUrl');
            if (inputField) {
                inputField.focus();
                // Move cursor to end if there's existing text
                if (inputField.value) {
                    inputField.selectionStart = inputField.selectionEnd = inputField.value.length;
                }
            }
        }, 100);

        // Form submission feedback
        const form = document.querySelector('form');
        if (form) {
            form.addEventListener('submit', () => {
                const submitBtn = form.querySelector('[type="submit"]');
                if (submitBtn) {
                    submitBtn.disabled = true;
                    submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Shortening...';
                }
            });
        }
    </script>
</body>
</html>